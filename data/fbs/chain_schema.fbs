namespace Chain;

table SegmentHeader {
    offset:ulong;
}

table Block {
    offset:ulong;
    size:ulong;
    entries:[BlockEntry];
}

table BlockEntry {
    offset:ulong;
    data:[byte];
}

root_type BlockEntry;
